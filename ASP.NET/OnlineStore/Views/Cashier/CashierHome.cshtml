

@{
    Layout = null;
}
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>CashierMenu</title>
</head>
<h1 style="color:#375a7f">Cashier Menu:</h1>
<table class="table table-striped table-hover ">
    <colgroup>
        <col style="width:190px">
    </colgroup>
    <tr>

        <td>Complete Specific Order:</td>
        <td><input id="Specific" type="button" class="btn btn-primary btn-xs" value="Click Here" onclick="@("window.location.href='" + @Url.Action("CompleteOrder", "Cashier") + "'");" /></td>
    </tr>
    <tr>
        <td>Complete All Orders:</td>
        <td><input id="All" type="button" class="btn btn-default btn-xs" value="Click Here" /></td>
    </tr>
    <tr>
        <td>Edit PInfo:</td>
        <td><input type="button" value="Click Here" class="btn btn-primary btn-xs" onclick="@("window.location.href='" + @Url.Action("EditInfo", "User") + "'");" /></td>
    </tr>
    <tr>
        <td>Logout:</td>
        <td><input type="button" value="Click Here" class="btn btn-default btn-xs" onclick="Logout()" /></td>
    </tr>
</table>
<script language="javascript">
    $.get("GetOpennedOrdersByJson", null, CheckIfOrderExists);
    function CheckIfOrderExists(Orders) {
        if (Orders.length == 0) {
            alert('There are No Openned Orders!');
            $("#Specific").prop('disabled', true);
            $("#All").prop('disabled', true);
        }
    }
    $("#All").click(function () 
    {
        $.get("GetOpennedOrdersByJson", null, completeAll);
        function completeAll(Orders) 
        {
            
           window.location.href = "/Cashier/CompleteAllOrders";
           alert('All Orders Completed!');
           $("#Specific").prop('disabled', true);
           $("#All").prop('disabled', true);
        }

    });
    function Logout() 
    {
        $.post("/Home/Logout", {});
        window.location.href = "/Home/Home";
    }
</script>

