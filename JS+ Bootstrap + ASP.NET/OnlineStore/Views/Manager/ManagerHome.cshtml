
<script src="~/Scripts/jquery-1.10.2.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

 <head>
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<meta name="viewport" content="width=device-width" />
<title>ManagerMenu</title>
</head>
    <h1 style="color:#375a7f">Manager Menu:</h1>
    <table class="table table-striped table-hover ">
        <colgroup>
            <col style="width:190px">
        </colgroup>
        <tr>
            <td>Add Product:</td>
            <td><input type="button" value="Click Here" class="btn btn-primary btn-xs" onclick="@("window.location.href='" + @Url.Action("AddProduct", "Manager") + "'");" /></td>
        </tr>
       <tr>
        <td>Delete Product:</td>
        <td><input type="button" id="DeleteProduct" class="btn btn-default btn-xs" value="Click Here" onclick="@("window.location.href='" + @Url.Action("DeleteProduct", "Manager") + "'");" /></td>
    </tr>
        <tr>
            <td>Add Worker</td>
            <td><input type="button" value="Click Here" class="btn btn-primary btn-xs" onclick="@("window.location.href='" + @Url.Action("AddWorker", "Manager") + "'");" /></td>
        </tr>
        <tr>
            <td>Delete Worker</td>
            <td><input type="button" id="DeleteWorker" class="btn btn-default btn-xs" value="Click Here" onclick="@("window.location.href='" + @Url.Action("DeleteWorker", "Manager") + "'");" /></td>
        </tr>
        <tr>
            <td>Edit PInfo:</td>
            <td><input type="button" value="Click Here" class="btn btn-primary btn-xs" onclick="@("window.location.href='" + @Url.Action("EditInfo", "User") + "'");" /></td>
        </tr>
        <tr>
            <td>View Profits:</td>
            <td><input type="button" value="Click Here" class="btn btn-default btn-xs" onclick="@("window.location.href='" + @Url.Action("ViewProfits", "Manager") + "'");" /></td>
        </tr>
        <tr>
            <td>Logout:</td>
            <td><input type="button" value="Click Here" class="btn btn-primary btn-xs" onclick="Logout()" /></td>
        </tr>
</table>
<script language="javascript">
    var productMsg = "";
        function Logout()
        {
            $.post("/Home/Logout", {});
            window.location.href = "/Home/Home";
        }
        $.get("GetProductsByJson", {Msg:""}, CheckIfProductExists);
        function CheckIfProductExists(json) {
            if (json.Products.length == 0) {
                productMsg = "There are No Available Products to Delete!\n";
                $("#DeleteProduct").prop('disabled', true);
            }
        }
        $.get("GetWorkersByJson", null, CheckIfWorkerExists);
        function CheckIfWorkerExists(json) {
            if (json.Workers.length == 0) {
                alert(productMsg+'There are No Available Workers to Delete!');
                $("#DeleteWorker").prop('disabled', true);
            }
        }
</script>